BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Databáze knih'
        md_bg_color: .8, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: .8, .8, .4, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Osobní databáze'
            icon: 'card-bulleted'

<BookContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: book_name
        text: 'Název knihy'
        pos_hint: {'center_x': .5, 'center_y': .9}

    MDDropDownItem:
        id: author_item
        pos_hint: {'center_x': .5, 'center_y': .7}
        size_hint_x: 1
        text: 'Autor'
        on_release: self.parent.menu_authors.open()

